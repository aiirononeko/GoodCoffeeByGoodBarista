<div class='mt-3'></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= link_to 'プロフィールを確認', user_path(current_user) %>

  <div class='text-center'>
    <% if current_user.image.attached? %>
      <%= image_tag current_user.image, class: "border border-dark barista-image" %>
    <% else %>
      <% if current_user.sex == '男' %>
        <%= image_tag 'job_barista_man.png', class: "border border-dark barista-image" %>
      <% else %>
        <%= image_tag 'job_barista_woman.png', class: "border border-dark barista-image" %>
      <% end %>
    <% end %>
  </div>

  <h3 class='text-center mt-5'><%= current_user.name %></h3>

  <% if resource.errors.any? %>
    <div>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
  <%= f.label :image, 'プロフィール画像' %>
  <div><%= f.file_field :image, class: 'form-control-file' %></div>
  </div>

  <div class='form-group'>
    <%= f.label :about, '紹介文' %>
    <%= f.text_area :about, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :want, 'やってみたいこと' %>
    <%= f.text_area :want, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :history, '職歴' %>
    <%= f.text_area :history, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :skills, 'スキル' %>
    <%= f.text_area :skills, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :education, '学歴' %>
    <%= f.text_area :education, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :language, '言語' %>
    <%= f.text_field :language, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :qualification, '資格' %>
    <%= f.text_field :qualification, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :aword, '受賞歴' %>
    <%= f.text_field :aword, class: 'form-control' %>
  </div>
  <%= f.submit 'プロフィールを更新', class: 'btn btn-success mt-3' %>
<% end %>

<%= link_to '退会する', user_registration_path, method: :delete, data: { confirm: '本当によろしいですか？' }, class: 'float-right mb-5' %>