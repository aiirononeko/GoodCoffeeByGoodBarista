<div class='mt-3'></div>
<%= link_to 'プロフィールを確認', owner_path(@owner) %>
<div class='mt-3'></div>

<%= form_with model: @owner, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :title, '募集タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :image, '店舗画像' %>
    <%= f.file_field :image, class: 'form-control-file' %>
  </div>
  <div class='mb-3'>
  <% if @owner.image.attached? %>
    <div><%= image_tag @owner.image, class: 'owner-image-show' %></div>
  <% else %>
    <div><%= image_tag 'cafe.jpeg', class: 'owner-image-show' %></div>
  <% end %>
  </div>
  <div class='form-group'>
    <%= f.label :about, 'こんなことやれます' %>
    <%= f.text_area :about, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :introduce, '店舗紹介' %>
    <%= f.text_area :introduce, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :wanted, 'こんな人と働きたいです' %>
    <%= f.text_area :wanted, rows: 5, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :status, '雇用形態' %>
    <br>
    <%= f.select :status, ['正社員', 'アルバイト'], class: 'form-control' %>
  </div>
  <%= f.submit 'プロフィールを更新', class: 'btn btn-success mt-3' %>
<% end %>

<div class='float-right mb-5'><%= link_to '退会する', owner_path(@owner), method: :delete, data: { confirm: '退会しますか？' } %></div>