<%= form_with(model: owner, local: true) do |form| %>
  <% if owner.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% owner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company, '店舗名または会社名' %>
    <%= form.text_field :company %>
  </div>

  <div class="field">
    <%= form.label :name, '担当者氏名' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :tel, '担当者電話番号' %>
    <%= form.text_field :tel %>
  </div>

  <div class="field">
    <%= form.label :email, '担当者メールアドレス' %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'パスワード（確認）' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit '登録する' %>
  </div>
<% end %>
